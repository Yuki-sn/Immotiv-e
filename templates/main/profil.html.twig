{# Utilisation du squelette de page base.html.twig #}
{% extends 'base.html.twig' %}

{# Titre de la page #}
{% block title %}Gestion du profil{% endblock %}

{# Contenu de la page #}
{% block body %}

<div class="container-fluid">

    {# Affichage des messages flashs de type "success" si il y en a #}
    {% include 'partials/flashes/success.html.twig' %}

    {# H1 #}
    <div class="row">
        <h1 class="col-12 text-center my-5">Gestion du profil</h1>
    </div>


    <div class="row">
        <div class="col-12 col-md-10 offset-md-2">
            <div class="row">
                <div class="col-12 col-md-9 px-2 py-3 bg-dark d-flex justify-content-center align-items-center">

                    {# Infos du compte #}
                    <ul class="list-group col-12 col-md-8 p-0">
                        <li class="list-group-item bg-black">Adresse Email : <span class="text-info">{{ app.user.email }}</span></li>                      
                        <li class="list-group-item bg-black">Prénom : <span class="text-info">{{ app.user.firstname }}</span></li>
                        <li class="list-group-item bg-black">Nom : <span class="text-info">{{ app.user.lastname }}</span></li>
                        <li class="list-group-item bg-black">Pseudonyme : <span class="text-info">{{ app.user.pseudonym }}</span></li> 
                        <li class="list-group-item bg-black">Activé : <span class="text-info">{% if app.user.pseudonym == true %}votre compte est activé{% else %}votre compte n'est pas activé{% endif %}</span></li> 
                        <li class="list-group-item bg-black">Compte : <span class="text-info">{{ is_granted('ROLE_ADMIN') ? 'Administrateur' : 'Membre' }}</span></li>
                        <li class="list-group-item bg-black"><a href="{{ path('all_annonce') }}">Toutes mes annonces</a></li>
                        
                    </ul>

                </div>

            </div>
        </div>
    </div>

</div>

{% endblock %}
